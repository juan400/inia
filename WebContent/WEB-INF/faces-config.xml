<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	<managed-bean>
		<managed-bean-name>maestroBean</managed-bean-name>
		<managed-bean-class>com.bean.comun.MaestroBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>com.bean.seg.LoginBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>registroBean</managed-bean-name>
		<managed-bean-class>com.bean.seg.RegistroBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>confirmacionBean</managed-bean-name>
		<managed-bean-class>com.bean.seg.ConfirmacionBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>perfilBean</managed-bean-name>
		<managed-bean-class>com.bean.seg.PerfilBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/Servicios/SEG/SEG009.jsp</from-view-id>
		<navigation-case>
			<from-action>#{perfilBean.registrar}</from-action>
			<from-outcome>registro-ok</from-outcome>
			<to-view-id>/Servicios/SEG/SEG008.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{perfilBean.registrar}</from-action>
			<from-outcome>registro-error</from-outcome>
			<to-view-id>/Servicios/SEG/SEG009.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>cancelar</from-outcome>
			<to-view-id>/Servicios/SEG/SEG008.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/Servicios/SEG/SEG010.jsp</from-view-id>
		<navigation-case>
			<from-action>#{perfilBean.actualizar}</from-action>
			<from-outcome>registro-ok</from-outcome>
			<to-view-id>/Servicios/SEG/SEG008.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>cancelar</from-outcome>
			<to-view-id>/Servicios/SEG/SEG008.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/Servicios/SEG/SEG008.jsp</from-view-id>
		<navigation-case>
			<from-outcome>Alta</from-outcome>
			<to-view-id>/Servicios/SEG/SEG009.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>Actualizar</from-outcome>
			<to-view-id>/Servicios/SEG/SEG010.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>cancelar</from-outcome>
			<to-view-id>/Servicios/Contenido.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/Servicios/SEG/SEG003.jsp</from-view-id>
		<navigation-case>
			<from-action>#{confirmacionBean.Confirmar}</from-action>
			<from-outcome>confirmar-ok</from-outcome>
			<to-view-id>/Servicios/SEG/SEG001.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{confirmacionBean.Confirmar}</from-action>
			<from-outcome>confirmar-error</from-outcome>
			<to-view-id>/Servicios/SEG/SEG003.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>Cancelar</from-outcome>
			<to-view-id>/Servicios/SEG/SEG001.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/Servicios/SEG/SEG001.jsp</from-view-id>
		<navigation-case>
			<from-action>#{loginBean.login}</from-action>
			<from-outcome>login-ok</from-outcome>
			<to-view-id>/Servicios/Contenido.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.login}</from-action>
			<from-outcome>login-error</from-outcome>
			<to-view-id>/Servicios/SEG/SEG001.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.logout}</from-action>
			<from-outcome>logout</from-outcome>
			<to-view-id>/Servicios/SEG/SEG001.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.registrarse}</from-action>
			<from-outcome>registrarse</from-outcome>
			<to-view-id>/Servicios/SEG/SEG002.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/Servicios/SEG/SEG002.jsp</from-view-id>
		<navigation-case>
			<from-action>#{registroBean.registrar}</from-action>
			<from-outcome>registro-ok</from-outcome>
			<to-view-id>/Servicios/SEG/SEG001.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{registroBean.registrar}</from-action>
			<from-outcome>registro-error</from-outcome>
			<to-view-id>/Servicios/SEG/SEG002.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>cancelar</from-outcome>
			<to-view-id>/Servicios/SEG/SEG001.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/Servicios/Contenido.jsp</from-view-id>
		<navigation-case>
			<from-outcome>irLogin</from-outcome>
			<to-view-id>/Servicios/SEG/SEG001.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<application>
		<navigation-handler>org.richfaces.ui.application.StateNavigationHandler</navigation-handler>
		<el-resolver>org.richfaces.el.StateELResolver</el-resolver>
		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>es</supported-locale>
		</locale-config>
		<message-bundle>com.bean.text_es</message-bundle>
		<message-bundle>com.bean.text_en</message-bundle>
		<resource-bundle>
			<base-name>com.bean.juan400SVN</base-name>
			<var>mailjuan400SVN</var>
		</resource-bundle>
	</application>
	<factory>
		<application-factory>org.richfaces.ui.application.StateApplicationFactory</application-factory>
	</factory>
</faces-config>
