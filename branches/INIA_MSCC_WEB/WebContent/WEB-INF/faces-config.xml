	<navigation-rule>

		<from-view-id>/Servicios/SEG/SEG001.jsp</from-view-id>
		<navigation-case>
			<from-action>#{loginBean.login}</from-action>
			<from-outcome>login-ok</from-outcome>
			<to-view-id>/Servicios/Contenido.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.login}</from-action>
			<from-outcome>login-error</from-outcome>
			<to-view-id>/Servicios/SEG/SEG001.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>registrarse</from-outcome>
			<to-view-id>/Servicios/SEG/SEG002.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<application>
		<navigation-handler>org.richfaces.ui.application.StateNavigationHandler</navigation-handler>
		<el-resolver>org.richfaces.el.StateELResolver</el-resolver>
		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>es</supported-locale>
		</locale-config>
		<message-bundle>com.bean.text_es</message-bundle>
		<message-bundle>com.bean.text_en</message-bundle>
		<resource-bundle>
			<base-name>com.bean.juan400SVN</base-name>
			<var>mailjuan400SVN</var>
		</resource-bundle>
	</application>
	<factory>
		<application-factory>org.richfaces.ui.application.StateApplicationFactory</application-factory>
	</factory>
